<!DOCTYPE html>
<head>
  <title>AJAX Example</title>
  <link rel="shortcut icon" href="https://lh3.googleusercontent.com/MpnmfR3zYPTojA03QbhGgwIHucmH5s4G2vbIlADYhODL488MQt_BuVztv9LYmJbhwkScYN0DIXuh4d10YMsLbWXT">
</head>

<body>
  <div>
    <h1>Select Reddit Sub</h1>
    <div id="list"></div>

  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script>
    (function(){
      $.ajax({ // "$" is reference to jQuery object
        url: '/api/endpoint',
        data: null,
        type: 'GET',
        success: function(resp){ // success callback
          console.log(JSON.stringify(resp))
          var data = resp.data // data is array of Reddit subs returned by "endpoint.js"
          var html = '<ol>'
          data.forEach(function(sub){
            html += '<a href="/axios/'+sub.path+'">'+sub.name+'</a><br />'
          })
          html += '</ol>'
          document.getElementById('list').innerHTML = html
        },
        error: function(resp){ // Error callback
          console.log('ERROR. Something went wrong.')
        }
      })
    })()
  </script>
</body>
</html>
